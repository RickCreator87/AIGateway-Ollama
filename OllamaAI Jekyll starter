_layouts/default.html
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{ page.title }} | {{ site.title }}</title>
    <link rel="stylesheet" href="/assets/css/style.css">
  </head>
  <body>
    {% include header.html %}
    <div class="container">
      {% include sidebar.html %}
      <main>
        {{ content }}
      </main>
    </div>
    {% include footer.html %}
  </body>
</html>

_layouts/page.html
---
layout: default
---
<div class="page">
  {{ content }}
</div>

_layouts/model.html
---
layout: default
---
<div class="model-page">
  <h1>{{ page.title }}</h1>
  {{ content }}
</div>

_includes/header.html
<header>
  <h1>{{ site.title }}</h1>
</header>

_includes/footer.html
<footer>
  <p>© {{ site.time | date: "%Y" }} OllamaAI</p>
</footer>

_includes/sidebar.html
<aside class="sidebar">
  <h3>Docs</h3>
  <ul>
    <li><a href="/guides/">Guides</a></li>
    <li><a href="/models/">Models</a></li>
  </ul>
</aside>

