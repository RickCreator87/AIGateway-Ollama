assets/js/main.js
console.log("OllamaAI docs loaded");

install.sh

!/usr/bin/env bash
set -e
sudo apt-get update
sudo apt-get install -y ruby-full build-essential zlib1g-dev
gem install bundler jekyll
bundle install

build.sh

!/usr/bin/env bash
set -e
bundle exec jekyll build
`

